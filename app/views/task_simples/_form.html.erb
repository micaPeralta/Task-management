
			  	<%= simple_form_for [@list,@task] do |f| %>
			  		
			  		<%=  render 'errors', task: @task %>
			  		
			  		<%= f.input :type, :as => :hidden, :input_html => { :value => @task.type }  %>

			      	 <%= f.input :description, as: :text, label: :description , input_html: {id: "description",class: "materialize-textarea"} %>
			      	
			      	 <%= f.select :priority, Task.priorities.keys,prompt: t('select'), label: "Prioridad" %>

			      	
			      	<%= f.select :state, [['Pendiente', 'Pendiente'],['Hecha','Hecha']],prompt: "Seleccione", label: "Estado"  %>
					  
					
					
					 <%= f.submit  :class => "right waves-effect blue darken-3 btn"%>
					 <% end %>

